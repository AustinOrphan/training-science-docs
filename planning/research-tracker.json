  "qualityAssessment": {
    "criteria": {
      "study_design": {
        "meta_analysis": 10,
        "systematic_review": 9,
        "randomized_controlled_trial": 8,
        "controlled_trial": 7,
        "cohort_study": 6,
        "case_control": 5,
        "cross_sectional": 4,
        "case_series": 3,
        "case_report": 2,
        "expert_opinion": 1
      },
      "sample_size": {
        "large": {
          "threshold": 100,
          "score": 3
        },
        "medium": {
          "threshold": 30,
          "score": 2
        },
        "small": {
          "threshold": 10,
          "score": 1
        },
        "very_small": {
          "threshold": 0,
          "score": 0
        }
      },
      "population_relevance": {
        "trained_endurance_athletes": 3,
        "recreational_athletes": 2,
        "general_population": 1,
        "clinical_population": 0
      },
      "outcome_measures": {
        "performance_measures": 3,
        "physiological_measures": 2,
        "subjective_measures": 1,
        "surrogate_measures": 0
      },
      "statistical_analysis": {
        "appropriate_advanced": 3,
        "appropriate_basic": 2,
        "limited": 1,
        "inadequate": 0
      }
    },
    "minimum_quality_score": 15,
    "excellent_quality_threshold": 25,
    "weighting": {
      "study_design": 0.40,
      "sample_size": 0.20,
      "population_relevance": 0.20,
      "outcome_measures": 0.10,
      "statistical_analysis": 0.10
    }
  },
  "integrationProtocols": {
    "evaluation_workflow": [
      {
        "step": 1,
        "name": "Initial Screening",
        "description": "Automated relevance filtering",
        "criteria": [
          "Title/abstract contains relevant keywords",
          "Published in target journals or by target researchers",
          "Published within last 2 years",
          "Full text available"
        ],
        "automated": true,
        "responsible": "automated_system"
      },
      {
        "step": 2,
        "name": "Quality Assessment",
        "description": "Systematic quality scoring",
        "criteria": [
          "Calculate quality score using rubric",
          "Check for conflicts of interest",
          "Verify methodology appropriateness",
          "Assess statistical validity"
        ],
        "automated": false,
        "responsible": "research_specialist",
        "time_required": "30 minutes"
      },
      {
        "step": 3,
        "name": "Relevance Assessment",
        "description": "Determine implementation relevance",
        "criteria": [
          "Applicability to current algorithms",
          "Potential impact on user outcomes",
          "Feasibility of implementation",
          "Resource requirements"
        ],
        "automated": false,
        "responsible": "algorithm_team",
        "time_required": "45 minutes"
      },
      {
        "step": 4,
        "name": "Integration Planning",
        "description": "Plan integration approach",
        "criteria": [
          "Define algorithm modifications needed",
          "Estimate development effort",
          "Plan validation approach",
          "Schedule implementation timeline"
        ],
        "automated": false,
        "responsible": "development_team",
        "time_required": "2 hours"
      }
    ],
    "decision_matrix": {
      "implementation_thresholds": {
        "immediate": {
          "quality_score": 25,
          "impact_score": 9,
          "feasibility_score": 8,
          "description": "High-quality research with major impact and high feasibility"
        },
        "planned": {
          "quality_score": 20,
          "impact_score": 7,
          "feasibility_score": 6,
          "description": "Good quality research with moderate impact"
        },
        "monitor": {
          "quality_score": 15,
          "impact_score": 5,
          "feasibility_score": 4,
          "description": "Emerging research to monitor for future consideration"
        },
        "reject": {
          "quality_score": 10,
          "impact_score": 3,
          "feasibility_score": 2,
          "description": "Low quality or relevance"
        }
      },
      "impact_assessment": {
        "criteria": [
          {
            "factor": "user_population_affected",
            "weight": 0.30,
            "scale": "percentage of user base affected"
          },
          {
            "factor": "performance_improvement_potential",
            "weight": 0.25,
            "scale": "expected percentage improvement"
          },
          {
            "factor": "injury_prevention_potential",
            "weight": 0.20,
            "scale": "expected injury rate reduction"
          },
          {
            "factor": "algorithm_accuracy_improvement",
            "weight": 0.15,
            "scale": "accuracy improvement percentage"
          },
          {
            "factor": "competitive_advantage",
            "weight": 0.10,
            "scale": "market differentiation potential"
          }
        ]
      }
    }
  },
